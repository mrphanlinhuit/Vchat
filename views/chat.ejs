<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <meta name="author" content="Trần Tâm UIT" />
    <title></title>

    <% if(typeof data !== 'undefined'){ %>
    <script>
        var roomName = '<%= data.roomName %>';
        <% if(data.newRoom === 'yes') { %>
            var newRoom = '<%= data.newRoom %>';
        <% } else {%>
            var newRoom = 'no';
        <% } %>
    </script>
    <% } %>

    <link rel="stylesheet" href="./css/bootstrap.css" />
    <link rel="stylesheet" href="./css/index.css"/>
    <link rel="stylesheet" href="./css/jquery-ui.min.css" />
    <link rel="stylesheet" href="./css/animation.css">
    <style>
        #content{
            min-height: 532px;
            height: 87%;
            padding-top: 0px;
        }
        .navbar{
            width: 100%;
            margin-bottom: 0px;
        }
        #logo{
            margin-top: 5px;
        }
        .video{
            max-width: 1920px;
            min-width: 320px;
            width: 35%;
            position: relative;
        }

        .img-responsive
        {
            width: 100%;
            border: 1px solid #ffffff;
        }

        .controls{
            float: right;
            margin-bottom: 0px;
            position: absolute;
            top: 5px; right: 5px;
        }

        .controls button{
            margin-right:10px;
            background:transparent;
            border: none;
        }

        .controls button:hover{background: #ffffff;}


        .panel-footer{
            position: fixed;
            bottom: 0;
            left: 0;
            padding: 0;
        }
        #chatBox{
            width: 350px;
            height: 405px;
            position: fixed;
            bottom: 0;
            z-index: 100000;
            right: 0;
        }
        #chatList{
            min-height: 50px;
            height: 340px;
            overflow: scroll;
            width: 100%;
            margin-bottom: 0;
            background: #ffffff;
            /*display: none;*/
        }
        #tbChat{
            position: absolute;
            width: 100%;
            bottom: 0;

        }

        #chatList ul p{
            width: 100%;
            overflow: visible;
        }
        #hideChat{
            float: right;
            margin-top: -30px;
        }
        .popover {
            position: relative;
            display: block;
            margin: 20px;
        }
        .popover.left{
            margin-left: 40px;
        }
        .popover.right.popup{
            float: right;
        }
        .popover.top{
            position: absolute;
            top:20%;
            left: 20%;
        }

        .navbar-form.navbar-right:last-child{
            margin-right: 200px;
        }
    </style>

    <script src="./js/jquery-2.1.1.js"></script>
    <script src='/socket.io/socket.io.js'></script>
    <script src="./js/RTCMultiConnection-v2.2.1.js"></script>
    <script  src="./js/RTCSignaling.js"></script>
    <script type="text/javascript" src="./js/functions.js"></script>

    <script src="./js/bootstrap.min.js"></script>


</head>
<body>
<nav class="navbar navbar-default" role="navigation" id="main_nav">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><img src="./images/logo.png" alt="WebRTC Chat on SkyWay" id="logo"></li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Chọn<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Hội Thảo</a></li>
                        <li><a href="#">Chat Ngẫu Nhiên</a></li>
                        <li><a href="#">Chat Nhóm</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                        <li class="divider"></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
            </ul>
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default" >
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </form>
            <div class="navbar-form  navbar-right">
                <div class="form-group">
                    <button class="btn btn-default" data-toggle="modal" data-target="#loginModal" >
                        <span class="glyphicon   glyphicon-spin5"></span>
                    </button>
                </div>
                <div class="form-group" >
                    <button class="btn btn-default" data-toggle="modal" data-target="#loginModal" >
                        <span class="glyphicon glyphicon-lock"></span>
                    </button>

                </div>
            </div>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div id="content">
    <!--videos element are here-->
</div>
<div id="divLog">
    <!--everything log here-->
</div>
<div id="chatBox">
    <div id="chatContent">
        <a href="#" class="list-group-item active">
            <h4 class="list-group-item-heading">Name of friend</h4>
            <button class="btn btn-transparent" id="hideChat" onclick="hideChat()">
                <span class="glyphicon glyphicon-cancel-circled"></span>
            </button>
        </a>
        <div id="chatList">


        </div>
    </div>

    <div class="form-group">
        <input id="tbChat" type="text"  class="form-control" placeholder="Chat" onclick="showChat()">
    </div>
    <audio id="chatSoundEffect" hidden="true">
        <source src="soundeffects/knocking_on_single_pane_glass_window_x_3.mp3" type="audio/mpeg" >
        Your browser does not support the audio element.
    </audio>
</div>



<footer class="panel-footer">

    <button type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-videocam-5"></span>
    </button>

    <button id="sharingScreen">Share Screen</button>

</footer>

<script src="./js/jquery-ui.min.js" ></script>

<script>
    var showCtrl = false;
    function hideChat(){
        $("#chatContent").hide();
    }
    hideChat();
    function showChat(){
        $("#chatContent").show();
    }

    function hideControls(){
        $(".controls").hide();
    }
    hideControls();
    function showControls(){
        $(".controls").show;
    }
</script>



</body>
</html>